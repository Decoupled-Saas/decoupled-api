{
  "env": {
    "es2021": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "google", "airbnb-base", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["import"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "endOfLine": "auto",
        "semi": true,
        "tabWidth": 2,
        "printWidth": 120,
        "trailingComma": "none"
      }
    ],
    "no-console": "off",
    "import/prefer-default-export": "off",
    "arrow-parens": ["off", "as-needed"],
    "max-len": [
      "error",
      120,
      2,
      {
        "ignoreUrls": true,
        "ignoreComments": false,
        "ignoreRegExpLiterals": true,
        "ignoreStrings": false,
        "ignoreTemplateLiterals": true
      }
    ],
    "no-unused-vars": ["error", { "argsIgnorePattern": "next" }],
    "import/extensions": [
      "error",
      {
        "js": "ignorePackages"
      }
    ]
  },
  "overrides": [
    {
      "files": ["*.test.js", "*.spec.js"],
      "plugins": ["unused-imports", "simple-import-sort"],
      "extends": ["airbnb-base","prettier"],
      "rules": {
        "no-unused-expressions": "off"
      }
    }
  ]
}
