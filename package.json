    "envalid": "^8.0.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^8.0.0",
    "http-status-codes": "^2.3.0",
    "knex": "^3.1.0",
    "morgan": "^1.10.0",
    "node-jose": "^2.2.0",
    "pg": "^8.13.0",
    "pg-hstore": "^2.3.4",
    "pino": "^9.1.0",
    "swagger-ui-express": "^5.0.0",
